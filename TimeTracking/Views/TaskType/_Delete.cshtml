@model TaskType;

@{
    Layout = "_Layout";
    ViewBag.Title = "Delete Task";

}
<form asp-controller="TaskType" method="post" class="container w-75">
    <div class="card mt-5">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title</h2>
            <h4 class="text-danger">Are you sure you want to delete this task?</h4>
            <a asp-controller="TaskType" asp-action="GetAll" class="btn btn-info mt-3 mb-3">Back to task list</a>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="TaskTypeId" class="form-label">Task ID</label>
                <input asp-for="TaskTypeId" class="form-control"readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Task Name</label>
                <input asp-for="Name" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-danger" asp-action="Delete">@ViewBag.Title</button>
        </div>
    </div>
</form>