@model ProjectName;

@{
    Layout = "_Layout";
    ViewBag.Title = "Delete Project";

}
<form asp-controller="ProjectName" method="post" class="container w-75">
    <div class="card mt-5">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title</h2>
            <h4 class="text-danger">Are you sure you want to delete this project?</h4>
            <a asp-controller="ProjectName" asp-action="GetAll" class="btn btn-info mt-3 mb-3">Back to customers list</a>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="ProjectNameId" class="form-label">Project ID</label>
                <input asp-for="ProjectNameId" class="form-control"readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Employee Name</label>
                <input asp-for="Name" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-danger" asp-action="Delete">@ViewBag.Title</button>
        </div>
    </div>
</form>