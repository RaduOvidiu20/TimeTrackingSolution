@model Employee;

@{
    Layout = "_Layout";
    ViewBag.Title = "Edit Employee";

}
<form asp-controller="Employee" method="post" class="container w-75">
    <div class="card mt-5">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title</h2>
            <a asp-controller="Employee" asp-action="GetAll" class="btn btn-info mt-3 mb-3">Back to customers list</a>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="EmployeeId" class="form-label">Employee ID</label>
                <input asp-for="EmployeeId" class="form-control" disabled="disabled"/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Employee Name</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="form-label">Employee Age</label>
                <input asp-for="Age" type="number" class="form-control"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="form-label">Employee Phone Number</label>
                <input asp-for="Phone" type="number" class="form-control"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-warning" asp-action="Edit">@ViewBag.Title</button>
        </div>
    </div>
</form>