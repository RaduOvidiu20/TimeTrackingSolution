@model TimeTracking;

@{
    Layout = "_Layout";
    ViewBag.Title = "Delete Record";

}
<form asp-controller="TimeTracking" method="post">
    <div class="card mt-5">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title</h2>
            <h4 class="text-danger">Are you sure you want to delete this record?</h4>
            <a asp-controller="TimeTracking" asp-action="GetAll" class="btn btn-info mt-3 mb-3">Back to customers list</a>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="TimeTrackingId" class="form-label">Record ID</label>
                <input asp-for="TimeTrackingId" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Customer" class="form-label">Customer Name</label>
                <input asp-for="Customer" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee" class="form-label">Employee Name</label>
                <input asp-for="Employee" type="text" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Employee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectName" class="form-label">Project Name</label>
                <input asp-for="ProjectName" type="text" class="form-control" readonly="readonly"/>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectOwner" class="form-label">Project Owner</label>
                <input asp-for="ProjectOwner" type="text" class="form-control" readonly="readonly"/>
                <span asp-validation-for="ProjectOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskType" class="form-label">Task Name</label>
                <input asp-for="TaskType" type="text" class="form-control" readonly="readonly"/>
                <span asp-validation-for="TaskType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkedHours" class="form-label">Worked hours</label>
                <input asp-for="WorkedHours" type="number" class="form-control" readonly="readonly"/>
                <span asp-validation-for="WorkedHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="form-label">Start</label>
                <input asp-for="StartDate" type="date" class="form-control" readonly="readonly"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="form-label">End</label>
                <input asp-for="EndDate" type="date" class="form-control" readonly="readonly"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="form-label">Comment</label>
                <input asp-for="Comment" type="text" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecordStatus" class="form-label">Status</label>
                <input asp-for="RecordStatus" type="text" class="form-control" readonly="readonly"/>
                <span asp-validation-for="RecordStatus" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-danger" asp-action="Delete">@ViewBag.Title</button>
        </div>
    </div>
</form>