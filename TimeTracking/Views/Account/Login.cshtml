@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Core.IdentityEntities.LoginDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Login";
}

<form asp-controller="Account" method="post" class="container w-75">
    <div class="card mt-5">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title</h2>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="UserName" class="form-label">Email</label>
                <input asp-for="UserName" type="text" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success" asp-action="Login">@ViewBag.Title</button>
        </div>
    </div>
</form>